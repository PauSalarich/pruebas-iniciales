mixin hz-navbar
    div.hz-navbar(data-hz-component="HzNavbar")
        div.hz-navbar__container
            div.hz-navbar__pager
                button(data-hz-navbar-prev,data-hz-navbar-content="prev",data-hz-navbar-content-to="title").hz-navbar__btn.hz-navbar__prev
                    span(data-hz-navbar-content="prev").hz-navbar__content
                div.hz-navbar__actions
                    button(data-hz-navbar-exit, data-hz-navbar-content="exit", data-hz-navbar-content-to="title").hz-navbar__btn.hz-navbar__action-exit
                        span(data-hz-navbar-content="exit").hz-navbar__content
                    p.hz-navbar__pages
                        span(data-hz-navbar-current, data-hz-navbar-content-to="title", data-hz-navbar-content="currentPage").hz-navbar__content.hz-navbar__current
                        span(data-hz-navbar-total, data-hz-navbar-content-to="title", data-hz-navbar-content="totalPages").hz-navbar__content.hz-navbar__total
                    //-button(data-hz-navbar-home, data-hz-navbar-content="home", data-hz-navbar-content-to="title").hz-navbar__btn.hz-navbar__action-home
                        span(data-hz-navbar-content="home").hz-navbar__content
                button(data-hz-navbar-next,data-hz-navbar-content="next",data-hz-navbar-content-to="title").hz-navbar__btn.hz-navbar__next
                    span(data-hz-navbar-content="next").hz-navbar__content

